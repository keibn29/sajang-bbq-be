generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  firstName String
  lastName  String
  phone     String
  avatar    String?
  role      String
  createAt  DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Branch {
  id        Int                   @id @default(autoincrement())
  name      String
  address   String
  phone     String
  avatar    String?
  utils     UtilitiesOnBranches[]
  createAt  DateTime              @default(now())
  updatedAt DateTime              @updatedAt

  @@map("branches")
}

model Utility {
  id        Int                   @id @default(autoincrement())
  name      String
  branches  UtilitiesOnBranches[]
  createAt  DateTime              @default(now())
  updatedAt DateTime              @updatedAt

  @@map("utilities")
}

model UtilitiesOnBranches {
  branch    Branch   @relation(fields: [branchId], references: [id])
  branchId  Int
  util      Utility  @relation(fields: [UtilityId], references: [id])
  UtilityId Int
  createAt  DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@id([branchId, UtilityId])
  @@map("utils_on_branches")
}

model Booking {
  id         Int      @id @default(autoincrement())
  statusId   String
  customerId String
  branchId   String
  table      Int
  date       String
  schedule   Schedule @relation(fields: [scheduleId], references: [id])
  scheduleId Int
  createAt   DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("bookings")
}

model Schedule {
  id        Int       @id @default(autoincrement())
  time    String
  bookings  Booking[]
  createAt  DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@map("schedules")
}

model Gallery {
  id        Int      @id @default(autoincrement())
  url       String
  createAt  DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("galleries")
}

model Blog {
  id        Int      @id @default(autoincrement())
  title     String
  content   String   @db.Text
  imageUrl  String
  createAt  DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("blogs")
}
